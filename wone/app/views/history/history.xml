<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:Card="nativescript-cardview" actionBarHidden="false" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Histórico de Gastos">
            <android>
                <NavigationButton icon="res://ic_arrow_back" tap="goBack" />
            </android>
        </ActionBar>
    </Page.actionBar>
    <StackLayout>
        <ListView items="{{ items }}">
            <ListView.itemTemplate>
                <Card:CardView margin="10">
                    <grid-layout rows="auto, auto, auto, auto, auto, auto, auto, auto, auto, auto" columns="*" className="catbar" >
                        <Label text="{{ YearMonth | dateConverter('MM/YYYY') }}" className="subtitle" textWrap="false" row="0" />
                        <Label text="Gastos Básicos" className="subtitle-left" textWrap="false" row="1" />
                        <Progress id="basicCategoryBar" value="{{ basicCategoryBar }}" className="{{ classBasicBar }}" row="2" />
                        <Label text="{{ basicCategoryLabel }}" className="minititle-right-cockpit" textWrap="false" row="3" />
                        <Label text="Gastos Extras" className="subtitle-left" textWrap="false" row="4" />
                        <Progress id="extraCategoryBar" value="{{ extraCategoryBar }}" className="{{ classExtraBar }}" row="5" />
                        <Label text="{{ extraCategoryLabel }}" className="minititle-right-cockpit" textWrap="false" row="6" />
                        <Label text="Investimentos" className="subtitle-left" textWrap="false" row="7" />
                        <Progress id="investimentCategoryBar" value="{{ investimentCategoryBar }}" className="{{ classInvestimentBar }}" row="8" />
                        <Label text="{{ investimentCategoryLabel }}" className="minititle-right-cockpit" textWrap="false" row="9" />                                     </grid-layout>
                </Card:CardView>        
            </ListView.itemTemplate>
        </ListView>
        <ActivityIndicator busy="{{ isLoading }}" />
    </StackLayout>    
</Page>



