<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded" actionBarHidden="false">
    <Page.actionBar>
        <ActionBar title="Esqueceu a senha?">
            <android>
                <NavigationButton icon="res://ic_arrow_back" tap="goBack" />
            </android>
            <ActionBar.actionItems>
                <ActionItem text="Enviar" icon="res://ic_submit" ios.position="right" tap="resetPassword" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*">
        <StackLayout>
            <TextField id="resetEmail" text="{{ resetEmail }}" autocorrect="false" autocapitalizationType="none" hint="E-mail" keyboardType="email" />
            <Label text="{{ message }}" className="message" textWrap="true" />
        </StackLayout>
    </GridLayout>
</Page>