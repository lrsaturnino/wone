<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Acessar Conta">
            <android>
                <NavigationButton icon="res://ic_arrow_back" tap="goBack" />
            </android>
            <ActionBar.actionItems>
                <ActionItem text="Acessar" icon="res://ic_submit" ios.position="right" tap="login" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*">
        <StackLayout>
            <TextField text="{{ previousUsername }}" autocorrect="false" autocapitalizationType="none" hint="E-mail" keyboardType="email" />
            <TextField text="{{ previousPassword }}" secure="true" hint="Senha" />
            <Label text="{{ message }}" className="message" />
        </StackLayout>
    </GridLayout>
</Page>