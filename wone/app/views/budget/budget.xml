<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded" actionBarHidden="false">
    <Page.actionBar>
        <ActionBar title="Orçamento">
            <ActionBar.actionItems>
            	<ActionItem text="Salvar" icon="res://ic_submit" ios.position="right" tap="save" />
            </ActionBar.actionItems>
		</ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto, auto, *, auto, auto" columns="3*, *, *">
        <Label text="{{ CategoryName }}" className="title" row="0" colSpan="3"/>
        <GridLayout rows="auto, auto" columns="3*, *, *" row="1" colspan="3" className="child-grid">
            <Label text="Categoria" className="subtitle" row="0" col="0"/>
            <Label text="R$" className="subtitle" row="0" col="1"/>
            <TextField id="SubCategoryNameInput" text="{{ SubCategoryNameInput }}" hint="{{ HintText }}" row="1" col="0" />
            <TextField id="SubCategoryBudgetInput" text="{{ SubCategoryBudgetInput }}" keyboardType="number" hint="R$ 0,00" row="1" col="1" />
            <Image src="~/images/icons/mostrecent.png" row="1" col="2" tap="addSubCat" className="image-icon"/>
        </GridLayout>
        <ListView id="SubCategoryList" items="{{ SubCategoryList }}" row="2" colSpan="3" className="list-view">
            <ListView.itemTemplate>
                <GridLayout columns="*, *, auto">
                    <Label text="{{ SubCategoryName }}" col="0"/>
                    <TextField text="{{ SubCategoryBudget }}" col="1" returnPress="sumTotalBudget" />
                    <Image src="res://ic_menu_delete" col="2" tap="delSubCat" />
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
        <Label text="Orçamento Mensal Estimado" className="subtitle" row="3" colSpan="3"/>
        <Label text="{{ TotalBudget }}" className="info-label" row="4" colSpan="3" />
    </GridLayout>
</Page>