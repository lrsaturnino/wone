<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="loaded">
    <Page.actionBar>
        <ActionBar title="Selecione a Categoria">
            <android>
                <NavigationButton icon="res://ic_arrow_back" tap="goBack" />
            </android>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="auto, *, auto, *, auto, *" columns="*">
        <Label text="Gastos BÃ¡sicos" row="0" className="subtitle-left"/>
        <ListView items="{{ basicSubCategoryList }}" row="1" className="list-view">
