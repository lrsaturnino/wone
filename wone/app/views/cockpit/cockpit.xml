<Page loaded="loaded" xmlns:drawer="nativescript-telerik-ui/sidedrawer" xmlns:chart="nativescript-telerik-ui/chart" xmlns="http://www.nativescript.org/tns.xsd" xmlns:FAB="nativescript-floatingactionbutton" navigatingTo="onNavigatedTo" >
    <Page.actionBar>
        <ActionBar title="Cockpit">
            <android>
                <NavigationButton icon="~/images/icons/menu.png" tap="toggleSideDrawer" className="image-icon" />
            </android>
            <ActionBar.actionItems>
            	<ios>
                	<ActionItem icon="~/images/icons/menu.png" ios.position="left" tap="toggleSideDrawer" className="image-icon" />
            	</ios>
                <ActionItem text="Histórico" ios.position="right" tap="goToHistory" />
            </ActionBar.actionItems>
    	</ActionBar>
    </Page.actionBar>
    <drawer:RadSideDrawer id="sideDrawer">
        <drawer:RadSideDrawer.mainContent>
            
                <!--<chart:RadCartesianChart id="cartesianChart" className="report-chart">
                    <chart:RadCartesianChart.series>
                        <chart:BarSeries items="{{ categoryDataChart }}" stackMode="Stack100" categoryProperty="Categoria" valueProperty="Gasto" showLabels="false"/>
                        <chart:BarSeries items="{{ categoryDataChart }}" stackMode="Stack100" categoryProperty="Categoria" valueProperty="Resto" showLabels="false"/>
                    </chart:RadCartesianChart.series>
                    <chart:RadCartesianChart.horizontalAxis >
                        <chart:LinearAxis  className="haxis-chart"/>
                    </chart:RadCartesianChart.horizontalAxis>
                    <chart:RadCartesianChart.verticalAxis>
                        <chart:CategoricalAxis/>
                    </chart:RadCartesianChart.verticalAxis>
                </chart:RadCartesianChart> -->
                
                <GridLayout rows="auto, auto, *,*, auto" columns="*">
                    <Label text="Energia Financeira" className="subtitle" textWrap="false" row="0"/>
                    <StackLayout row="1">
                        <Progress value=" {{ hpBar }}" className="progress-hp" />
                        <Progress value=" {{ hpBar }}" className="progress-hp" />
                        <Progress value=" {{ hpBar }}" className="progress-hp" />
                        <Progress value=" {{ hpBar }}" className="progress-hp" />

                    </StackLayout>        
                    <Label text="{{ cockpitMessage }}" className="message-label" textWrap="true" row="2" />
                    
                    <GridLayout rows="auto, auto, auto, auto, auto, auto" columns="4*,*" row="3">
                        <Label text="Gastos Básicos" className="subtitle-left" textWrap="false" row="0" colspan="2"/>
                        <Progress value="{{ basicCategoryBar }}" className="progress-categories-blue" row="1" col="0" />
                        <Label text="{{ basicCategoryLabel }}" className="" textWrap="false" row="1" col="1"/>
                        <Label text="Gastos Extras" className="subtitle-left" textWrap="false" row="2" colspan="2"/>
                        <Progress value="{{ extraCategoryBar }}" className="progress-categories-blue" row="3" col="0"/>
                        <Label text="{{ extraCategoryLabel }}" className="" textWrap="false" row="3" col="1"/>
                        <Label text="Investimentos" className="subtitle-left" textWrap="false" row="4" colspan="2"/>
                        <Progress value="{{ investimentCategoryBar }}" className="progress-categories-green" row="5" col="0"/>
                        <Label text="{{ investimentCategoryLabel }}" className="" textWrap="false" row="5" col="1"/>
                    </GridLayout>
                        <GridLayout rows="*, auto" columns="*,*,*,*" row="4" colspan="2">
                            <android>
                                <FAB:fab id="favButton1" tap="addFav1Expense" icon="~/images/icons/add.png" backColor="#D32F2F" rippleColor="#f1f1f1" className="fab-button" row="0" col="0" />
                                <FAB:fab id="favButton2" tap="addFav2Expense" icon="~/images/icons/add.png" backColor="#FBC02D" rippleColor="#f1f1f1" className="fab-button" row="0" col="1" />
                                <FAB:fab id="favButton3" tap="addFav3Expense" icon="~/images/icons/add.png" backColor="#1976D2" rippleColor="#f1f1f1" className="fab-button" row="0" col="2" />
                                <FAB:fab tap="addOtherExpense" icon="~/images/icons/add.png" backColor="#4CAF50" rippleColor="#f1f1f1" className="fab-button" row="0" col="3" />
                                <Label row="1" col="0" text="{{ fab1Label }}" className="field-title"/>
                                <Label row="1" col="1" text="{{ fab2Label }}" className="field-title"/>
                                <Label row="1" col="2" text="{{ fab3Label }}" className="field-title"/>
                                <Label row="1" col="3" text="Mais" className="field-title"/>
                            </android>
                            <ios>
                                <Button id="favButton1" text="{{ fab1Label }}" tap="addFav1Expense" row="0" col="0"/>
                                <Button id="favButton2" text="{{ fab2Label }}" tap="addFav2Expense" row="0" col="1"/>
                                <Button id="favButton3" text="{{ fab3Label }}" tap="addFav3Expense" row="0" col="2"/>
                                <Button text="Mais" tap="addOtherExpense" row="0" col="3"/>
                            </ios>

                        </GridLayout>
                </GridLayout>
                
        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <StackLayout className="drawerContent">
                <StackLayout className="headerContent">
                    <Label text="Acesso rápido"/>
                </StackLayout>
                <StackLayout className="drawerMenuContent">
                    <Label text="Orçamento" tap="goToBudget"/>
                    <Label text="Cartões de Crédito" tap="goToCreditCard"/>
                    <Label text="Minha Conta" tap="goToAccount"/>
                    <Label text="Sobre Nós"/>
                </StackLayout>
            </StackLayout>
        </drawer:RadSideDrawer.drawerContent>
	</drawer:RadSideDrawer>
</Page>
 

